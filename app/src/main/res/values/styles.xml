<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- "transparent" actionBar -->
        <item name="colorPrimary">?android:attr/colorBackground</item>
        <!-- "transparent" statusBar -->
        <item name="colorPrimaryDark">?android:attr/colorBackground</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <!-- colors -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>

    <style name="AppTheme.TextAppearance.Keypad" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">@dimen/textKeypad</item>
    </style>
</resources>
